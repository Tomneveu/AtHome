{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
<div class="col-sm-10 offset-sm-1 p-1">
    
    <h1>Admin index</h1>

    <div class="table-responsive-sm">
        <table class="table table-bordered table-sm text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>First_name</th>
                    <th>Last_name</th>
                    <th>Address</th>
                    <th>Created_at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.address }}</td>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('admin_edit', {'id': user.id}) }}"><i class='fas fa-edit'></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

</div>
{% endblock %}